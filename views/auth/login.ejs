<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST" novalidate>
            <div class="form-controls">
                <label for="email">E-Mail</label>
                <input
                class="<%=validationError.find(e=> e.param === 'email')?'invalid' : '' %> "  
                 type="email" name="email" id="email" value="<%=oldInput.email%>" >
            </div>
            <div class="form-controls">
                <label for="password">Password</label>
                <input
                class="<%=validationError.find(e=> e.param === 'password')?'invalid' : '' %> " 
                type="password" name="password" id="password" value="<%=oldInput.password%>">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfTokenss %>">
            <button class="btns" type="submit">Login</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>